\def\C@@#1{\leavevmode\hbox{C\hskip-0.1ex\raise0.5ex\hbox{#1++}}}
\def\@C++{%
	\ifx\@currsize\Huge	\C@@{\LARGE}%
\else	\ifx\@currsize\huge	\C@@{\Large}%
\else	\ifx\@currsize\LARGE	\C@@{\large}%
\else	\ifx\@currsize\Large	\C@@{\normalsize}%
\else	\ifx\@currsize\large	\C@@{\small}%
\else				\C@@{\tiny}%
\fi\fi\fi\fi\fi
}
\def\C++{\protect\@C++}
\endinput

