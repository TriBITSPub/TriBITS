%%---------------------------------------------------------------------------%%
%% DESIGN DOCUMENT MACROS
%%---------------------------------------------------------------------------%%

\newenvironment{designArtifacts}[1]{
  The design artifacts for the #1 are:
  \begin{center}%
    \begin{tabular}{|l|l|c|}\hline%
      \multicolumn{1}{|c|}{\bf Artifact} & 
      \multicolumn{1}{c|}{\bf Reference} & 
      \multicolumn{1}{c|}{\bf Page}
      \\\hline}%
    {
    \end{tabular}%
  \end{center}%
}

\newcommand{\designArtifact}[3]{#1 & #2 & #3 \\\hline}

%%---------------------------------------------------------------------------%%
%% REQUIREMENTS CHECKLIST MACROS
%%---------------------------------------------------------------------------%%

\RequirePackage{enumerate}

\newenvironment{reqList}{
  \begin{enumerate}[1.]}
  {\end{enumerate}}

\newenvironment{subreqList}{
  \begin{enumerate}[\theenumi.1.]}
  {\end{enumerate}}

\newenvironment{subsubreqList}{
  \begin{enumerate}[\theenumi.\theenumii.1.]}
  {\end{enumerate}}

\newcommand{\reqitem}[1]{\item $\square$ #1}
\newcommand{\creqitem}[1]{\item $\boxtimes$ #1}

